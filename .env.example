# =================================
# SilentSort Configuration
# =================================

# Copy this file to .env and fill in your actual values

# =================================
# AI SERVICES (Required)
# =================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# =================================
# AI MONITORING (Optional)
# =================================

# LangSmith for AI workflow monitoring and debugging
# Get your API key from: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=silentsort-workflows

# =================================
# CLOUD SERVICES (Optional)
# =================================

# Supabase for cloud backup and synchronization
# Get your credentials from: https://supabase.com/dashboard
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =================================
# SERVER CONFIGURATION
# =================================

# Python AI Service Configuration
HOST=127.0.0.1
PORT=8002
LOG_LEVEL=info
RELOAD=true

# =================================
# FILE PROCESSING SETTINGS
# =================================

# Maximum file size to process (in MB)
MAX_FILE_SIZE_MB=50

# Supported file extensions for processing
SUPPORTED_EXTENSIONS=.txt,.md,.pdf,.docx,.xlsx,.csv,.py,.js,.ts,.json,.png,.jpg,.jpeg

# Number of characters to extract for content preview
CONTENT_PREVIEW_CHARS=3000

# =================================
# DESKTOP APP SETTINGS
# =================================

# Default folder to monitor (can be changed in UI)
DEFAULT_MONITOR_FOLDER=~/Downloads

# Enable development mode features
NODE_ENV=development

# Enable detailed logging
DEBUG_MODE=true

# =================================
# SECURITY SETTINGS
# =================================

# Enable/disable file content upload to AI services
ALLOW_CONTENT_UPLOAD=true

# Maximum number of files to process per hour (rate limiting)
MAX_FILES_PER_HOUR=1000

# =================================
# WORKFLOW AUTOMATION (Optional)
# =================================

# n8n Cloud webhook URL for automation workflows
N8N_WEBHOOK_URL=your_n8n_webhook_url_here

# =================================
# SETUP INSTRUCTIONS
# =================================

# 1. Copy this file: cp .env.example .env
# 2. Get OpenAI API key: https://platform.openai.com/api-keys
# 3. Edit .env with your actual API key
# 4. Run: npm run dev
# 5. Optional: Add other service keys for enhanced features

# Estimated API costs: ~$0.01-0.05 per file processed
# Free tier: OpenAI gives $5 credit for new accounts
